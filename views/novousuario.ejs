<!doctype html>
<html>
  <%- include('partials/head', { titulo: 'Novo Usuário' }) %>
  <body>
    <%- include('partials/navbar', { active: 'novo-usuario' }) %>

    <main class="container">
      <h1>Novo Usuário</h1>

      <form id="formNovoUsuario" class="formulario">
        
        

        <div class="form-group">
          <label for="nomeUsuario">Nome Completo</label>
          <input id="nomeUsuario" name="nome" type="text" required>
        </div>

        <div class="form-group">
          <label for="emailUsuario">Email</label>
          <input id="emailUsuario" name="email" type="email" required>
        </div>

        <div class="btn-group">
          <button class="btn btn-primary" type="submit">OK</button>
          <a class="btn btn-secondary" href="/">CANCELAR</a>
        </div>
      </form>
    </main>

    <%- include('partials/footer') %>
    <script src="/js/main.js"></script>
  </body>
</html>